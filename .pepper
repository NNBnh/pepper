config indent_with_tabs false
lsp-start "rust-analyzer"

map normal <space>b :<space>build<enter>
map normal <space>t :<space>test<enter>

on-platforms windows @{
    macro build @{
        open "build.log" scratch
        enqueue-keys aad
        replace-with-output "cmd /c cargo build 2>&1"
    }
    macro test @{
        open "text.log" scratch
        enqueue.keys aad
        replace-with-output "cmd /c cargo test --workspace 2>&1"
    }

    # remedybg
    map normal <space>d<space> :<space>remedybg-debug<enter>
    macro remedybg-debug @{
        run "remedybg target/debug/pepper.exe -s s --server"
    }
}

on-platforms linux @{
    macro build @{
        open "build.log" scratch
        enqueue-keys aad
        replace-with-output "sh -c 'cargo build 2<greater>&1'"
    }
    macro test @{
        open "text.log" scratch
        enqueue.keys aad
        replace-with-output "sh -c 'cargo test --workspace 2<greater>&1'"
    }
}
